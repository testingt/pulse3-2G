azul = #22BCE0
grisOscuro = #444
grisTexto = #7A7A7A
naranja = #DD4F24

a
	color naranja

body
	background #E8E8E8
	color grisOscuro
	font-family Arial
	font-size 16px

header
	background grisOscuro
	box-shadow 0 5px 0 rgba(0, 0, 0, .2)
	color #EEE
	overflow hidden
	padding 0.5em
	position relative
	z-index 1

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img 
			width 52px

	.titular
		margin 0 60px 0 70px
		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none

		.publicar
			background naranja
			color #eee
			float right
			font-style italic
			margin -0.3em 1em 0 0
			padding .2em .5em
			text-shadow 1px 1px 0px black
			text-decoration none

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	
	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2
			img
				border-radius 50%	
				width 50px
		.flechita
			background naranja
			color #EEE
			display block
			padding 3px
			position absolute
			right 0
			text-align right
			top 15px
			width 50%

nav
	background azul
	border-left 15px solid #fff
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid #fff
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		padding 0
		white-space nowrap
		li
			display inline-block

			a
				color #eee
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

.posts
	padding 0.5em
	
	.post
		background #fff
		border-radius 0 0 .5em .5em
		box-shadow 2px 2px 10px rgba(black, .5)
		color grisTexto

		.acciones
			border-top 3px solid azul
			padding .5em

		.descripcion
			color grisTexto
	
			.imagen
				float left

				img
					height 160px
					vertical-align top
					width 120px