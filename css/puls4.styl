azul = #22BCE0
grisOscuro = #444


body
	background #E8E8E8
	color grisOscuro
	font-family Arial
	font-size 16px

header
	background grisOscuro
	color #EEE
	padding 0.5em
	position relative

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img 
			width 52px

	.titular
		margin 0 80px 0 70px

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	
	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			img
				border-radius 50%	
				width 50px

nav
	background azul